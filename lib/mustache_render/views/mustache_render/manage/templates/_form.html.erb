<% if @mustache_render_template.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@mustache_render_template.errors.count, "error") %> 个问题导致不能保存:</h2>

    <ul>
      <% @mustache_render_template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :folder_id %><br />
  <%= f.select :folder_id, MustacheRenderFolder.nested_set_select_options()  %>
</div>

<div class="field">
  <%= f.label :content %><br />
  <%= f.text_area :content %>
</div>

<div class="field">
  <%= f.label :note %><br />
  <%= f.text_area :note, :rows => 5 %>
</div>

<% unless @mustache_render_template.new_record? %>
  <div class="field">
    <%= f.label :change_log %><br />
    <%= f.text_area :change_log, :rows => 5 %>
  </div>
<% end %>

<div class="actions">
  <%= f.submit %>
</div>

